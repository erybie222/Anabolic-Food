<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pusta Strona</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <style>
.star-rating {
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  justify-content: center;
  font-size: 2rem;
  gap: 5px;
}
.star-rating input {
  display: none;
}
.star-rating label {
  color: gray;
  cursor: pointer;
  transition: color 0.3s ease-in-out;
}
.star-rating label:hover,
.star-rating label:hover ~ label {
  color: gold;
}
.star-rating input:checked ~ label,
.star-rating input:checked ~ label ~ label {
  color: gold;
}



    </style>
  </head>
  <body data-bs-theme="dark">
    <div class="container h-100">
      <%- include('../partials/header') %>

      <h1 style="margin-top: -30px;" class="text-center"><%=recipe.description%></h1>
      <div style="margin-bottom: -50px;" class="d-flex justify-content-center align-items-center gap-3">
        <h6 class="text-center">‚è≥ Czas przygotowania: <%= recipe.making_time %> minut</h6>
        <% if (diet) { %>
          <h6 class="text-center">ü•ó Dieta: <%= diet %></h6>
        <% } %>
      </div>
      <div class="row py-lg-5">
        <div class="d-flex justify-content-center">
          <% if (photo) { %>
            <img
              src="<%= photo %>"
              alt="Nie mo≈ºna wy≈õwietliƒá zdjƒôcia!"
              style="
                height: 500px;
                display: block;
                border-radius: 10px;"
            />
          <% } else { %>
            <p style="color: white; text-align: center;">Brak zdjƒôcia w bazie danych</p>
          <% } %>
        </div>
      </div>

      <h2 style="margin-top: -50px;" class="text-center">Sk≈Çadniki</h2>
      <div style="margin-top: 0px;" class="d-flex justify-content-center">
        <table class="table table-dark table-borderless text-center" style="width: 65%; margin-top: 8px;">
            <thead>
              <tr>
                <th scope="col" class="px-2 py-1">#</th>
                <th scope="col" class="px-2 py-1">Nazwa sk≈Çadnika</th>
                <th scope="col" class="px-2 py-1">Ilo≈õƒá</th>
                <th scope="col" class="px-2 py-1">Jednostka</th>
              </tr>
            </thead>
            <tbody>
              <% ingredients.forEach((ingredient, index) => { %>
                <tr>
                  <th scope="row" class="px-2 py-1"><%= index + 1 %></th>
                  <td class="px-2 py-1"><%= ingredient.ingredient_name %></td>
                  <td class="px-2 py-1"><%= ingredient.quantity %></td>
                  <td class="px-2 py-1"><%= ingredient.unit %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
      </div>

      <h2 class="text-center">Instrukcje</h2>
        <div class="bg-dark text-light p-3 rounded mx-auto text-center" style="max-width: 65%; width: 100%; margin-top: -20px;">
            <p style="font-size: 18px;"><%= recipe.instruction %></p>
        </div>
      <h2 class="text-center">Kalorie</h2>

      <div class="d-flex justify-content-center mt-2">
        <table class="table table-sm table-dark table-bordered text-center" style="width: 60%; font-size: 14px; table-layout: fixed;">
          <thead>
            <tr>
              <th scope="col" class="py-1 px-2" style="width: 25%;">Kalorie</th>
              <th scope="col" class="py-1 px-2" style="width: 25%;">Bia≈Çka</th>
              <th scope="col" class="py-1 px-2" style="width: 25%;">T≈Çuszcze</th>
              <th scope="col" class="py-1 px-2" style="width: 25%;">Wƒôglowodany</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="py-1 px-2"><%= calories.calories %></td>
              <td class="py-1 px-2"><%= calories.proteins %></td>
              <td class="py-1 px-2"><%= calories.fats %></td>
              <td class="py-1 px-2"><%= calories.carbs %></td>
            </tr>
          </tbody>
        </table>
      </div>

       <!-- Formularz dodawania opinii -->
       <h3 class="text-center">Dodaj opiniƒô</h3>
       <div class="d-flex justify-content-center">
         <form action="/ratings/<%=recipe.recipe_id%>" method="POST" style="width: 50%;" class="bg-dark p-4 rounded" id="reviewForm">
           <div class="mb-3">
             <!-- <label for="username" class="form-label">Twoje imiƒô</label> -->
             <!-- <input type="text" class="form-control" id="username" name="username" required> -->
           </div>
           <div class="mb-3 text-center">
             <label class="form-label">Ocena</label>
             <div class="star-rating">
              <% for (let i = 5; i >= 1; i--) { %>
                <input type="radio" id="star<%= i %>" name="rating" value="<%= i %>" required>
                <label for="star<%= i %>">&#9733;</label>
              <% } %>
            </div>
            
           </div>
           <div class="mb-3">
             <label for="comment" class="form-label">Opinia</label>
             <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
           </div>
           <button type="submit" class="btn btn-primary">Dodaj opiniƒô</button>
         </form>
       </div>
  </body>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("reviewForm");
    
      if (!form) {
        console.error("‚ùå Formularz nie zosta≈Ç znaleziony!");
        return;
      }
    
      console.log("‚úÖ Formularz znaleziony, dodawanie event listenera...");
    
      form.addEventListener("submit", async function (event) {
        event.preventDefault(); // ‚ùå Zapobiega domy≈õlnemu prze≈Çadowaniu strony
    
        console.log("‚úÖ Wys≈Çanie oceny - przechwycenie eventu");
    
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
    
        try {
          const response = await fetch(this.action, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });
    
          if (!response.ok) {
            throw new Error("B≈ÇƒÖd HTTP " + response.status);
          }
    
          const result = await response.json();
          console.log("‚úÖ Odpowied≈∫ serwera:", result); // Debugowanie
    
          if (result.reload) {
            console.log("üîÑ Prze≈Çadowanie strony...");
            window.location.reload(); // üîÑ Od≈õwie≈ºenie strony
          }
        } catch (err) {
          console.error("‚ùå B≈ÇƒÖd podczas wysy≈Çania oceny:", err);
        }
      });
    });
    </script>
    
  
  
  


