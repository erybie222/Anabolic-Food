<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Moje przepisy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body data-bs-theme="dark">
    <div class ="container h-100" >
    <%- include('../partials/header') %>
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% recipes.forEach(recipe => { %>
        <div class="col">
          <div class="card shadow-sm">
            <img src="<%= recipe.photo %>" class="card-img-top" alt="Zdjƒôcie przepisu" height="225">
            <div class="card-body">
              <p class="card-text"><%=recipe.description%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/recipes/show_recipe/<%=recipe.recipe_id%>"><button type="button" class="btn btn-sm btn-outline-secondary ">View</button></a>
                  <a href="/recipes/edit_recipe/<%=recipe.recipe_id%>"><button type="button" class="btn btn-sm btn-outline-secondary">Edit</button></a>
                  <button type="button" class="btn btn-sm btn-danger delete-recipe"  data-id="<%= recipe.recipe_id %>">Delete</button>
                </div> 
                <small class="text-body-secondary"> <%= recipe.username?recipe.username: "Nieznany u≈ºytkownik" %> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                  <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z"/>
                  <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16m7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0"/>
                </svg><%= " " + recipe.making_time + " minut" %> </small>
              </div>
            </div>
          </div>
        </div>
      <%});%>
    </div>
    
    <%- include('../partials/footer') %>
  </div>
  </body>
</html>
<script>
 document.querySelectorAll(".delete-recipe").forEach(button => {
    button.addEventListener("click", function () {
        const recipeId = this.getAttribute("data-id");
        console.log("üõ†Ô∏è DEBUG: Klikniƒôto 'Usu≈Ñ' dla ID:", recipeId, "| Typ:", typeof recipeId);

        if (!recipeId || isNaN(Number(recipeId))) {
            alert("‚ùå B≈ÇƒÖd: Nieprawid≈Çowe ID przepisu.");
            return;
        }

        if (!confirm("Czy na pewno chcesz usunƒÖƒá ten przepis?")) {
            return;
        }

        fetch(`/recipes/${recipeId}`, { 
            method: "DELETE",
            headers: { "Content-Type": "application/json" }
        })
        .then(response => response.json())
        .then(data => {
            console.log("‚úÖ Odpowied≈∫ serwera:", data);
            if (data.message.includes("‚úÖ")) {
                alert("‚úÖ Przepis zosta≈Ç usuniƒôty.");
                window.location.reload(); 
            } else {
                alert("‚ùå WystƒÖpi≈Ç b≈ÇƒÖd podczas usuwania przepisu.");
            }
        })
        .catch(error => {
            console.error("‚ùå B≈ÇƒÖd:", error);
            alert("‚ùå WystƒÖpi≈Ç b≈ÇƒÖd po stronie serwera.");
        });
    });
});



  </script>
  