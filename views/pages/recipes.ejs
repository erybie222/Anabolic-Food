<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dodaj Przepis</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </head>
  <body data-bs-theme="dark">
    <%- include('../partials/header') %>
    <div class="container mt-5">
      <div id="recipeForm" style="display: none">
        <div class="text-center">
          <h2>Dodaj Nowy Przepis</h2>
        </div>

        <form
          id="recipeFormElement"
          action="/add_recipe"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="description" class="form-label">Opis</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              required
            />
          </div>
          <div class="mb-3">
            <label for="instruction" class="form-label">Instrukcja</label>
            <textarea
              class="form-control"
              id="instruction"
              name="instruction"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="meal" class="form-label">Posiłek</label>
            <input
              type="text"
              class="form-control"
              id="meal"
              name="meal"
              required
            />
          </div>

          <h4>Kalorie</h4>
          <div class="mb-3">
            <input
              type="number"
              step="1"
              class="form-control"
              name="calories"
              placeholder="kalorie"
              required
            />
          </div>
          <div class="row mb-2">
            <div class="col">
              <input
                type="number"
                step="1"
                class="form-control"
                name="proteins"
                placeholder="białko"
                required
              />
            </div>
            <div class="col">
              <input
                type="number"
                step="1"
                class="form-control"
                name="fats"
                placeholder="tłuszcze"
                required
              />
            </div>
            <div class="col">
              <input
                type="number"
                step="1"
                class="form-control"
                name="carbs"
                placeholder="węglowodany"
                required
              />
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label"></label>
            <select class="form-select" name="bulk_cut" required>
              <option value="true">Masa</option>
              <option value="false">Redukcja</option>
            </select>
          </div>

          <h4>Zdjęcie</h4>
          <div class="mb-3">
            <label for="imageInput" class="form-label"></label>
            <input
              class="form-control"
              type="file"
              id="imageInput"
              name="image"
              accept="image/*"
              required
            />
          </div>

          <div class="mb-3">
            <img
              id="imagePreview"
              class="img-thumbnail d-none"
              style="max-width: 200px"
            />
          </div>

          <h4>Składniki</h4>
          <div id="ingredients">
            <div class="row mb-2">
              <div class="col">
                <input
                  type="text"
                  class="form-control"
                  name="ingredient_name[]"
                  placeholder="Nazwa składnika"
                  required
                />
              </div>
              <div class="col">
                <input
                  type="number"
                  step="0.01"
                  class="form-control"
                  name="quantity[]"
                  placeholder="Ilość"
                  required
                />
              </div>
              <div class="col">
                <input
                  type="text"
                  class="form-control"
                  name="unit[]"
                  placeholder="Jednostka"
                  required
                />
              </div>

              <div class="col-auto">
                <button type="button" class="btn btn-danger remove-ingredient">
                  Usuń
                </button>
              </div>
            </div>
          </div>

          <div class="d-flex">
            <button type="submit" class="btn btn-success">Dodaj Przepis</button>

            <button
              type="button"
              class="btn btn-primary ms-auto"
              id="addIngredient"
            >
              Dodaj Składnik
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      document
        .getElementById("add-recipe-btn")
        .addEventListener("click", function () {
          let form = document.getElementById("recipeForm");
          form.style.display = form.style.display === "none" ? "block" : "none";
        });

      document
        .getElementById("addIngredient")
        .addEventListener("click", function () {
          let ingredientDiv = document.createElement("div");
          ingredientDiv.classList.add("row", "mb-2");
          ingredientDiv.innerHTML = `
          <div class="col">
            <input type="text" class="form-control" name="ingredient_name[]" placeholder="Nazwa składnika" required>
          </div>
          <div class="col">
            <input type="number" step="0.01" class="form-control" name="quantity[]" placeholder="Ilość" required>
          </div>
          <div class="col">
            <input type="text" class="form-control" name="unit[]" placeholder="Jednostka" required>
          </div>
          <div class="col-auto">
            <button type="button" class="btn btn-danger remove-ingredient">Usuń</button>
          </div>
        `;
          document.getElementById("ingredients").appendChild(ingredientDiv);
        });

      document.addEventListener("click", function (event) {
        if (event.target.classList.contains("remove-ingredient")) {
          event.target.closest(".row").remove();
        }
      });

      document
        .getElementById("recipeFormElement")
        .addEventListener("submit", function (event) {
          event.preventDefault();
          this.reset();
          alert("Przepis został dodany!");

          document.getElementById("recipeForm").style.display = "none";

          let imagePreview = document.getElementById("imagePreview");
          if (imagePreview) {
            imagePreview.src = "";
            imagePreview.classList.add("d-none");
          }
        });
    </script>

    <%- include('../partials/footer') %>
  </body>
</html>
