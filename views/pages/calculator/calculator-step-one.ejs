<head data-bs-theme="dark">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</head>

<body data-bs-theme="dark">
<%- include('../../partials/header') %>

<div class="container d-flex align-items-center justify-content-center vh-100">
  <div
    class="card bg-gradient bg-dark text-white shadow-lg p-4"
    style="max-width: 500px; width: 100%"
  >
    <div class="card-body">
      <h2 class="text-center text-uppercase fw-bold text-primary mb-3">
        Kalkulator Diety
      </h2>
      <p class="text-center text-light">Twoje dane biomedyczne:</p>

      <form action="/calculator/step-one" method="POST">
        <div class="mb-3">
          <label class="form-label fw-bold">Płeć*</label>
          <div class="d-flex gap-3">
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="male"
                required
                id="male"
              />
              <label class="form-check-label" for="male">Mężczyzna</label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="gender"
                value="female"
                id="female"
              />
              <label class="form-check-label" for="female">Kobieta</label>
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold" for="weight">Waga*</label>
          <input
            type="number"
            class="form-control form-control-lg"
            name="weight"
            id="weight"
            required
            placeholder="Wpisz swoją wagę w kg"
          />
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold" for="age">Wiek*</label>
          <input
            type="number"
            class="form-control form-control-lg"
            name="age"
            id="age"
            required
            placeholder="Wpisz swój wiek"
          />
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold" for="height">Wzrost*</label>
          <input
            type="number"
            class="form-control form-control-lg"
            name="height"
            id="height"
            required
            placeholder="Wpisz swój wzrost w cm"
          />
        </div>

        <button type="submit" class="btn btn-lg btn-primary fw-bold w-100 mt-3">
          Następny krok
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('../../partials/footer') %>
</body>
