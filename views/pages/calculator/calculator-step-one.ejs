<%- include('../../partials/header') %>
<div class="container text-white">
  <h2>KALKULATOR DIETY</h2>
  <p>Twoje dane biomedyczne:</p>

  <form action="/calculator/step-one" method="POST">
    <label>PŁEĆ*</label>
    <div>
      <input type="radio" name="gender" value="male" required /> Mężczyzna
      <input type="radio" name="gender" value="female" /> Kobieta
    </div>

    <label>WAGA*</label>
    <input
      type="number"
      name="weight"
      required
      placeholder="Wpisz swoją wagę w kg"
    />

    <label>WIEK*</label>
    <input type="number" name="age" required placeholder="Wpisz swój wiek" />

    <label>WZROST*</label>
    <input
      type="number"
      name="height"
      required
      placeholder="Wpisz swój wzrost w cm"
    />

    <button type="submit">NASTĘPNY KROK</button>
  </form>
</div>
