<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</head>

<%- include('../../partials/header') %>

<div class="container d-flex align-items-center justify-content-center vh-100">
  <div
    class="card text-white bg-gradient bg-dark shadow-lg p-4"
    style="max-width: 600px; width: 100%"
  >
    <div class="card-body">
      <h2 class="text-center text-uppercase fw-bold text-primary mb-4">
        Kalkulator Diety
      </h2>

      <form action="/calculator/step-two" method="POST">
        <div class="mb-3">
          <label class="form-label fw-bold">Aktywność fizyczna*</label>
          <select class="form-select form-select-lg" name="activity" required>
            <option value="sedentary">Siedzący tryb życia</option>
            <option value="moderate">Średnia aktywność</option>
            <option value="high">Wysoka aktywność</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Cel diety*</label>
          <select class="form-select form-select-lg" name="goal" required>
            <option value="cut">Chcę schudnąć</option>
            <option value="bulk">Chcę przytyć</option>
          </select>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-lg btn-primary fw-bold">
            Oblicz
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
