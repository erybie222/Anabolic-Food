<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <title>Przepisy</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://cdn.jsdelivr.net/npm/nouislider@15.7.1/dist/nouislider.min.css" rel="stylesheet">

  </head>

  <body data-bs-theme="dark">
    <div class="container">
      <header class="row align-items-center py-3 mb-4 border-bottom">
        <!-- Lewa sekcja: Logo + Dodaj Przepis + SearchBar -->
        <div class="col-lg-4 col-md-5 col-12 d-flex align-items-center gap-2">
          <button
            class="btn btn-outline-light btn-sm py-0 px-2 d-flex align-items-center"
            id="filtersButton"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#sidebar"
            aria-controls="sidebar"
            style="height: 31px"
          >
            Filtry
          </button>

          <!-- Sidebar Offcanvas -->
          <div
            class="offcanvas offcanvas-start"
            tabindex="-1"
            id="sidebar"
            aria-labelledby="sidebarLabel"
            style="max-width: 300px"
          >
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="sidebarLabel">Filtry</h5>
              <button
                type="button"
                class="btn-close text-reset"
                data-bs-dismiss="offcanvas"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="list-unstyled w-100">
                <!-- Redukcja / Masa -->
                <li class="mb-1">
                  <div class="d-flex form-check form-switch">
                    <span>Redukcja</span>
                    <input
  class="form-check-input mx-2"
  type="checkbox"
  id="flexSwitchCheckDefault"
/>
                    <span>Masa</span>
                  </div>
                </li>

                <!-- Kalorie -->
                <div class="mb-4">
                  <label class="form-label">Kalorie: <span id="calories-range"></span></label>
                  <div id="calories-slider"></div>
                </div>

                
                <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed w-100" 
                data-bs-toggle="collapse" data-bs-target="#ingredients-collapse" aria-expanded="false">
            Sk≈Çadniki
        </button>
        <div class="collapse" id="ingredients-collapse">
          <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
            <% if(typeof ingredients !== 'undefined'){ %>
          <% ingredients.forEach(ingredient => { %>
                    <li>
                    <div class="form-check">

                      <input 
                      class="form-check-input"
                      type="checkbox"
                      value="<%=ingredient.ingredient_name%>" 
                      id="flexCheckDefault<%=ingredient.ingredient_id%>"
                    >
                    <label class="form-check-label" for="flexCheckDefault<%=ingredient.ingredient_id%>">
                      <%= ingredient.ingredient_name %>
                    </label>
                        
                       
                    </div>
                    </li>
                  <% }); %>
          <% } %>
          </ul>
        </div>
        
        
    </li>
    <button
  class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed w-100"
  data-bs-toggle="collapse"
  data-bs-target="#meals-collapse"
  aria-expanded="false"
>
  Posi≈Çek
</button>
      <div class="collapse" id="meals-collapse">
        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
          <% if(typeof meals !== 'undefined') { %>
        <% meals.forEach((meal,index) => { %>
                  <li>
                  <div class="form-check">

                    <input 
  class="form-check-input"
  type="checkbox"
  value="<%= meal %>"
  id="meal_<%=index%>"
>
<label class="form-check-label" for="meal_<%= index %>">
  <%= meal %>
</label>

                  </div>
                  </li>
                <% }); %>
        <% } %>
        </ul>
      </div>
      
      
  </li>
                  <li class="border-top my-3"></li>
              </ul>

              <!-- Przycisk Filtruj poza UL -->
              <div class="d-grid">
                <button id="applyFiltersButton" class="btn btn-primary mt-3">
                  Filtruj
                </button>
              </div>
            </div>
          </div>

          <form action="/recipes" method="GET" class="flex-grow-1">
            <input
              type="search"
              name="q"
              class="form-control form-control-sm"
              placeholder="Szukaj przepisu..."
            />
          </form>

          <button
            type="button"
            class="btn btn-success btn-sm"
            id="add-recipe-btn"
          >
            Dodaj przepis
          </button>
        </div>

        <!-- Nawigacja -->
        <div class="col-lg-4 col-md-2 d-none d-md-flex justify-content-center">
          <ul class="nav">
            <li>
              <a href="/" class="nav-link px-2 text-light">Strona g≈Ç√≥wna</a>
            </li>
            <li>
              <a href="/recipes" class="nav-link px-2 text-light">Przepisy</a>
            </li>
            <li><a href="/about" class="nav-link px-2 text-light">O nas</a></li>
            <li>
              <a href="/calculator/step-one" class="nav-link px-2 text-light"
                >Kalkulator</a
              >
            </li>
          </ul>
        </div>

        <!-- Logowanie -->
        <div class="col-lg-4 col-md-5 col-12 d-flex justify-content-end">
          <!-- Tw√≥j kod logowania EJS -->
        </div>
      </header>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- SLIDER -->
    <script src="https://cdn.jsdelivr.net/npm/nouislider@15.7.1/dist/nouislider.min.js"></script>

    <!-- Tw√≥j JS -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {

// Listener na przycisk "Filtruj"
const applyFiltersButton = document.getElementById("applyFiltersButton");
if (applyFiltersButton) {
  applyFiltersButton.addEventListener("click", () => {
    console.log("‚úÖ Przycisk filtruj zosta≈Ç klikniƒôty!");
    applyFilters();
  });
} else {
  console.log("‚ùå Brak przycisku applyFiltersButton w HTML");
}

// Slider kalorii
const caloriesSlider = document.getElementById('calories-slider');
const caloriesRange = document.getElementById('calories-range');

noUiSlider.create(caloriesSlider, {
  start: [100, 800],
  connect: true,
  range: {
    min: 0,
    max: 2000,
  },
  step: 50,
  tooltips: [true, true],
});

caloriesSlider.noUiSlider.on('update', (values) => {
  caloriesRange.innerHTML = `${Math.round(values[0])} - ${Math.round(values[1])} kcal`;
});

});
      

function applyFilters() {
    console.log("üöÄ applyFilters() zosta≈Ç uruchomiony!");

    const calorieValues = document.getElementById('calories-slider').noUiSlider.get();

    const selectedIngredients = Array.from(document.querySelectorAll("#ingredients-collapse input[type='checkbox']:checked"))
        .map(el => el.value);

    const selectedMeals = Array.from(document.querySelectorAll("#meals-collapse input[type='checkbox']:checked"))
        .map(el => el.value);

    console.log("üìå Zaznaczone sk≈Çadniki:", selectedIngredients);
    console.log("üìå Zaznaczone posi≈Çki:", selectedMeals);

    const filters = {
        bulk_cut: document.querySelector("#flexSwitchCheckDefault").checked,
        calories_min: Number(calorieValues[0]),
        calories_max: Number(calorieValues[1]),
        ingredients: selectedIngredients.length > 0 ? selectedIngredients : undefined,
        meals: selectedMeals.length > 0 ? selectedMeals : undefined,
    };

    console.log("üßê Wysy≈Çane filtry:", JSON.stringify(filters, null, 2));

    fetch("/recipes/filter", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(filters),
    })
    .then(response => {
        if (!response.ok) throw new Error(`B≈ÇƒÖd HTTP: ${response.status}`);
        return response.json();
    })
    .then(data => updateRecipeList(data))
    .catch(err => console.error("‚ùå B≈ÇƒÖd AJAX:", err));
}
      function updateRecipeList(recipes) {
        console.log("‚úÖ Przepisy:", recipes);
      }

    </script>
  </body>
</html>

